<?xml version="1.0"?>
<!--*- mode: xml -*-->
<interface>
  <object class="GtkTreeStore" id="outline_store">
    <columns>
      <column type="GdkPixbuf"/>
      <column type="gchararray"/>
      <column type="gpointer"/>
    </columns>
  </object>

  <object class="GtkScrolledWindow" id="outline_panel">
    <property name="width-request">180</property>
    <property name="hscrollbar_policy">automatic</property>
    <property name="vscrollbar_policy">automatic</property>
    <property name="shadow_type">in</property>
    <child>
      <object class="GtkTreeView" id="outline_treeview">
        <property name="model">outline_store</property>
        <property name="headers-visible">False</property>
        <property name="enable-tree-lines">True</property>
        <property name="search-column">1</property>
        <!--tooltip-column use markup string, but need plain text.-->
        <!--property name="tooltip-column">2</property-->
        <property name="has-tooltip">True</property>
        <signal handler="outline_page_cb_query_tooltip" name="query-tooltip"/>
        <signal handler="outline_page_cb_row_activated" name="row-activated"/>
        <child>
          <object class="GtkTreeViewColumn" id="elem_column">
            <child>
              <object class="GtkCellRendererPixbuf" id="icon_cell_renderer"/>
              <attributes>
                <attribute name="pixbuf">0</attribute>
              </attributes>
            </child>
            <child>
              <object class="GtkCellRendererText" id="decl_cell_renderer"/>
              <attributes>
                <attribute name="text">1</attribute>
              </attributes>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>

