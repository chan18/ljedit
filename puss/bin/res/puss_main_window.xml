<?xml version="1.0"?>
<interface>
  <object class="GtkWindow" id="main_window">
    <property name="title" translatable="yes">Puss - source editor</property>
    <property name="default_width">1024</property>
    <property name="default_height">768</property>
    <signal handler="cb_main_window_delete" name="delete-event"/>

    <child>
      <object class="GtkVBox" id="main_vbox">
        <child>
          <object class="GtkMenuBar" constructor="main_ui_manager" id="main_menubar"/>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>

        <child>
          <object class="GtkHBox" id="main_toolbar_hbox">
            <child>
              <object class="GtkToolbar" constructor="main_ui_manager" id="main_toolbar"/>
              <packing>
                <property name="expand">true</property>
                <property name="fill">true</property>
                <property name="position">0</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">false</property>
            <property name="position">1</property>
          </packing>
        </child>

        <child>
          <object class="GtkHPaned" id="hpaned1">
            <child>
              <object class="GtkNotebook" id="left_panel">
                <property name="scrollable">true</property>
                <property name="group_id">1</property>
                <property name="tab_pos">GTK_POS_BOTTOM</property>
              </object>
              <packing>
                <property name="resize">false</property>
                <property name="shrink">true</property>
              </packing>
            </child>
            <child>
              <object class="GtkVPaned" id="vpaned1">
                <child>
                  <object class="GtkHPaned" id="hpaned2">
                    <child>
                      <object class="GtkNotebook" id="doc_panel">
                        <property name="scrollable">true</property>
                      </object>
                      <packing>
                        <property name="resize">true</property>
                        <property name="shrink">true</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkNotebook" id="right_panel">
                        <property name="scrollable">true</property>
                        <property name="group_id">1</property>
                        <property name="tab_pos">GTK_POS_BOTTOM</property>
                      </object>
                      <packing>
                        <property name="resize">false</property>
                        <property name="shrink">true</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="resize">true</property>
                    <property name="shrink">true</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkNotebook" id="bottom_panel">
                    <property name="scrollable">true</property>
                    <property name="group_id">1</property>
                    <property name="tab_pos">GTK_POS_BOTTOM</property>
                  </object>
                  <packing>
                    <property name="resize">false</property>
                    <property name="shrink">true</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="resize">true</property>
                <property name="shrink">true</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="position">2</property>
          </packing>
        </child>
        <child>
          <object class="GtkStatusbar" id="statusbar">
            <property name="spacing">2</property>
          </object>
          <packing>
            <property name="expand">false</property>
            <property name="position">3</property>
          </packing>
        </child>
      </object>
    </child>
  </object>

  <object class="GtkDialog" id="search_dialog">
    <property name="default_width">300</property>
    <property name="default_height">170</property>
    <property name="window_position">GTK_WIN_POS_CENTER_ON_PARENT</property>
    <property name="destroy_with_parent">true</property>
    <property name="type_hint">GDK_WINDOW_TYPE_HINT_DIALOG</property>
    <property name="skip_taskbar_hint">true</property>
    <property name="skip_pager_hint">true</property>
    <property name="has_separator">false</property>
    <signal handler="cb_search_dialog_delete" name="delete-event" />

    <child internal-child="vbox">

      <object class="GtkVBox" id="dialog-vbox1">
        <property name="spacing">2</property>
        <child>
          <object class="GtkHBox" id="hbox1">
            <child>
              <object class="GtkVBox" id="vbox1">
                <property name="spacing">5</property>
                <child>
                  <object class="GtkEntry" id="search_dialog_find_entry">
                  </object>
                  <packing>
                    <property name="expand">False</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkEntry" id="search_dialog_replace_entry">
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="position">1</property>
                  </packing>
                </child>
                <child>
                  <placeholder/>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkVButtonBox" id="vbuttonbox1">
                <property name="spacing">5</property>
                <property name="layout_style">GTK_BUTTONBOX_START</property>
                <child>
                  <object class="GtkButton" id="search_dialog_find_button">
                    <property name="label" translatable="yes">find</property>
                    <signal handler="puss_search_dialog_cb_find" name="clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="search_dialog_replace_button">
                    <property name="label" translatable="yes">replace</property>
                    <signal handler="puss_search_dialog_cb_replace" name="clicked"/>
                  </object>
                  <packing>
                    <property name="position">1</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkButton" id="search_dialog_replace_all_button">
                    <property name="label" translatable="yes">replace_all</property>
                    <signal handler="puss_search_dialog_cb_replace_all" name="clicked"/>
                  </object>
                  <packing>
                    <property name="position">2</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="position">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>

