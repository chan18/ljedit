#!/bin/sh

if [ "`whoami`" = "root" ]
then
	echo "ljedit make deb"
else
	echo "ERROR : need root user!"
	exit 1
fi

mkdir .build
mkdir -p .build/usr/share/ljedit

cp -rf deb/* .build/
cp -rf ../bin/* .build/usr/share/ljedit/

rm -rf .build/.svn
rm -rf .build/DEBIAN/.svn
rm -rf .build/usr/.svn
rm -rf .build/usr/share/.svn
rm -rf .build/usr/share/applications/.svn
rm -rf .build/usr/share/ljedit/.svn
rm -rf .build/usr/share/ljedit/styles/.svn
rm -rf .build/usr/share/ljedit/plugins/.svn
rm -rf .build/usr/share/ljedit/plugins/gdbmi/.svn
rm -rf .build/usr/share/ljedit/plugins/ljedit_ljcs_res/.svn

rm -rf .build/usr/share/ljedit/_ljedit_win32_boot.py
rm -rf .build/usr/share/ljedit/*.pyc
rm -rf .build/usr/share/ljedit/plugins/*.pyc
rm -rf .build/usr/share/ljedit/plugins/gdbmi/*.pyc

cd .build
dpkg -b . ../ljedit-1.0-`date +%F`.deb

cd ..
rm -rf .build

