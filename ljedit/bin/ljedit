#!/bin/bash

[ ${0:0:1} = / ] && c_dir=${0%/*} || c_dir=$PWD/${0%/*}
#echo current dir is: $c_dir

if [ -x $c_dir/_ljedit ]
then
	ljed_dir=$c_dir
elif [ -x /usr/share/ljedit/_ljedit ]
then
	ljed_dir=/usr/share/ljedit
elif [ -x /usr/local/share/ljedit/_ljedit ]
then
	ljed_dir=/usr/local/share/ljedit
else
	echo "not find ljedit in CURRENT_DIR or /usr/share/ljedit/ or /usr/local/share/ljediti/"
	exit 1
fi

export LD_LIBRARY_PATH=$ljed_dir/plugins:$LD_LIBRARY_PATH
export PYTHONPATH=$ljed_dir

ljedit=$ljed_dir/_ljedit
$ljedit $%


